{
  "openapi":"3.0.3",
  "info":{
    "title":"Rest API Category",
    "description":"Spesification Rest API Category with Golang",
    "version":"1.0.0"
  },
  "externalDocs":{
    "description":"Lebih lanjut belajar tentang membuat openapi",
    "url":"https://www.youtube.com/watch?v=o5b6TYSNK5c"
  },
  "servers":[
    {
      "url":"localhost:3000/api"
    }
    ],
  "paths":{
    "/categories":{
      "get":{
        "description":"List all categories",
        "responses":{
          "200":{
            "description":"Success get all categories",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                  "status":{
                    "type":"string"
                  },
                  "data":{
                    "type":"array",
                    "items":{
                      "type":"object",
                      "properties":{
                        "id":{
                          "type":"number"
                        },
                        "name":{
                          "type":"string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
}